<shortcuts>
	<programGroup defaultName="cancergrid metadata registry $APP_VER rev$SVN_REVISION" location="applications"/>
	
	<shortcut name="cgMDR Startup" target="$INSTALL_PATH/bin/startup.bat"
		description="eXist Database Startup" programGroup="yes"
        desktop="yes" iconFile="$INSTALL_PATH/icon.bmp"/>
	<shortcut name="cgMDR Local Homepage" target="$INSTALL_PATH/index.html"
		description="The local homepage of the server" programGroup="yes"
        desktop="yes"/>
	<shortcut name="cgMDR Client Shell"
        target="$INSTALL_PATH/bin/client.bat"
		description="Start the command-line client" programGroup="yes"
        desktop="yes" terminal="false"/>
	<shortcut name="Install cgMDR as Service" 
		target="$INSTALL_PATH/tools/wrapper/bin/install.bat"
		description="Install the eXist server as a service"
		programGroup="yes" desktop="no"/>
	<shortcut name="Uninstall the cgMDR service"
		target="$INSTALL_PATH/tools/wrapper/bin/uninstall.bat"
		description="Uninstall the eXist service"
		programGroup="yes" desktop="no"/>
	<shortcut name="Uninstall" target="$INSTALL_PATH/Uninstaller/uninstaller.jar"
		description="Uninstall cgMDR" programGroup="yes"/>
	<shortcut name="DB Check and Export Tool"
        target="$INSTALL_PATH/bin/check.bat"
		description="Start the consistency check and export tool" programGroup="yes"
        desktop="yes" terminal="false"/>
</shortcuts>
