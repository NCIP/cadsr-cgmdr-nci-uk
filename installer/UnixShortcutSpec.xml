<shortcuts>
	<programGroup defaultName="cancergrid metadata registry $APP_VER rev$SVN_REVISION" location="applications"/>
	
	<shortcut 
		name="cgMDR Startup"
		type="Application"
		encoding="UTF-8"
		target="$INSTALL_PATH/bin/startup.sh"
		description="cgMDR Startup" 
		programGroup="yes"
        desktop="yes"
		terminal="true"
		iconFile="$INSTALL_PATH/icon.bmp"/>
	<shortcut 
		name="cgMDR Local Homepage" 
		target="$INSTALL_PATH/index.html"
		url="$INSTALL_PATH/index.html"
		description="The local homepage of cgMDR"
		iconFile="help"
		iconIndex="0"
		programGroup="yes"
        desktop="yes"
		type="Link"/>
	<shortcut name="cgMDR Client Shell"
        type="Application"
		encoding="UTF-8"
        target="$INSTALL_PATH/bin/client.sh"
		description="Start the command-line client"
        terminal="false" 
		programGroup="yes"
        desktop="yes"/>
    <shortcut name="DB Check and Export Tool"
        type="Application"
		encoding="UTF-8"
        target="$INSTALL_PATH/bin/check.sh"
		description="Start the consistency check and export tool"
        terminal="false" 
		programGroup="yes"
        desktop="yes"/>
	<shortcut name="Uninstall eXist"
		encoding="UTF-8"
        target="$JAVA_HOME/bin/java"
		commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
		iconFile="trashcan_full"
		description="Uninstall eXist" 
		programGroup="yes"
		desktop="no"
		type="Application"/>
</shortcuts>
